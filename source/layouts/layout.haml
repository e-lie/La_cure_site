!!! 5
%html.no-js{lang: 'en'}
  %head
    %meta{:charset => "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    / Use title if it's in the page YAML frontmatter
    %title= 'Auberge de la Cure - Maljasset' || data.page.title

    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}/

    = stylesheet_link_tag "app"

    = javascript_include_tag  "vendor/custom.modernizr"
  / 
  %body{:class => page_classes, :id => "parallax-bg"}
    %div.topBar#menu
      %a(class="menuLink" href='#menu')Menu
      %div.row
        %nav.top-bar#navigation
          %ul.title-area
            %li.name
              %h1= link_to 'Auberge de la Cure', 'index.html'
            %li.toggle-topbar.menu-icon= link_to 'Menu', '#'
          %section.top-bar-section.right
            %ul
              %li.has-dropdown
                %a(href='#auberge') L'auberge et environs
                %ul.dropdown
                  %li= link_to 'l\'auberge', '#auberge'
                  %li= link_to 'Intérieur', '#interieur'
                  %li= link_to 'Le village', '#village'
                  %li= link_to 'La région', '#region'
              %li= link_to 'Activités', '#activites'
              %li.has-dropdown
                %a(href='#informations') Informations
                %ul.dropdown
                  %li= link_to 'Tarifs', '#tarifs'
                  %li= link_to 'Météo', '#meteo'
                  %li= link_to 'Enneigement', '#enneigement'
                  %li= link_to 'Accès au gîte', '#acces'
              %li.has-dropdown
                %a(href='#contact') Contact
                %ul.dropdown
                  %li= link_to 'Réservation', '#reservation'
                  %li= link_to 'Contactez-nous', '#contact'


    = yield


    %script
    = javascript_include_tag 'vendor/jquery-1.8.3.min.js'
    /= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js'
    = javascript_include_tag 'foundation/foundation'
    = javascript_include_tag 'foundation/foundation.section'
    = javascript_include_tag 'foundation/foundation.placeholder'
    = javascript_include_tag 'foundation/foundation.forms'
    = javascript_include_tag 'foundation/foundation.dropdown'
    = javascript_include_tag 'foundation/foundation.alerts'
    = javascript_include_tag 'foundation/foundation.cookie'
    = javascript_include_tag 'foundation/foundation.tooltips'
    = javascript_include_tag 'foundation/foundation.reveal'
    = javascript_include_tag 'foundation/foundation.magellan'
    = javascript_include_tag 'foundation/foundation.orbit'
    = javascript_include_tag 'foundation/foundation.joyride'
    = javascript_include_tag 'foundation/foundation.topbar'
    = javascript_include_tag 'foundation/foundation.clearing'
    %script
      $(document).foundation();
    = javascript_include_tag 'plugins/jquery.scrollTo.min.js'
    = javascript_include_tag 'plugins/jquery.localScroll.min.js'
    = javascript_include_tag 'plugins/jquery.parallax-1.1.3.js'
    = javascript_include_tag 'app'

    / Piwik
    :javascript
      var _paq = _paq || [];
      _paq.push(["trackPageView"]);
      _paq.push(["enableLinkTracking"]);

      (function() {
        var u=(("https:" == document.location.protocol) ? "https" : "http") + "://maljassetgite.fr/piwik/";
        _paq.push(["setTrackerUrl", u+"piwik.php"]);
        _paq.push(["setSiteId", "2"]);
        var d=document, g=d.createElement("script"), s=d.getElementsByTagName("script")[0]; g.type="text/javascript";
        g.defer=true; g.async=true; g.src=u+"piwik.js"; s.parentNode.insertBefore(g,s);
      })();

